{
  "compilerOptions": {
    "target": "es5", //빌드된 javascript 
    "module": "esnext", //모듈 관련 설정
    "strict": true, //엄격모드 할 것임?
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node", //모듈 해석방식
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [ //빌더가 패스 밑에 있는 파일을 자바스크립트 파일로 빌드를 하게 됨
    "src/**/*.ts", 
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [ //빌드를 예외 할 파일
    "node_modules"
  ]
}
